{{ form_start(form) }}
<div class="Header">
    <h3 class="Heading">Корзина</h3>
    <h5 class="Action">Удалить все</h5>
</div>
{% for tag in form.orderProducts %}
    <div class="Cart-Items">
        <div class="about">
            <h1 class="title">{{ form_label(tag.product.name, tag.product.name.vars.value) }}</h1>
            <h3 class="subtitle">{{ form_label(tag.product.size, tag.product.size.vars.value) }} мл.</h3>
        </div>
        <div class="counter">
            <div class="btn">+</div>
            <div class="count">{{ form_label(tag.count, tag.count.vars.value) }}</div>
            <div class="btn">-</div>
        </div>
        <div class="prices">
            <div class="amount">{{ form_label(tag.product.price, tag.product.price.vars.value) }} руб.</div>
            <div class="remove"><u>Удалить</u></div>
        </div>
    </div>
{% endfor %}
<hr class="hr_cart">
<div class="checkout">
    <div class="total">
        <div>
            <div class="Subtotal">Итого:</div>
        </div>
        <div class="total-amount">{{ sum }} руб.</div>
    </div>
    {{ form_widget(form.submit, {'attr': {'class': 'button'}}) }}
</div>
{{ form_end(form) }}
